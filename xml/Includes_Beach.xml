<?xml version="1.0" encoding="utf-8"?>
<includes>
	<include name="Snow Beach">
		<control type="image">
				<left>0</left>
				<top>0</top>
				<width></width>
				<height>0</height>
				<texture></texture>
				<aspectratio scalediffuse="false">keep</aspectratio>
		</control>	
	</include>	
	<include name="Lights Beach">
		<control type="image">
				<left>0</left>
				<top>-160</top>
				<width></width>
				<height>500</height>
				<texture>lights_beach.png</texture>
				<aspectratio scalediffuse="false">keep</aspectratio>
		<visible>Skin.HasSetting(EnableStringLights) + Skin.HasSetting(HolidayThemes) + Skin.HasSetting(Beach) + [[!Player.Playing | !Window.IsVisible(FullScreenVideo)] | Window.IsVisible(DialogSeekBar.xml)]</visible>
		</control>
	</include>		
	<include name="Tree Beach">		
		<control type="image">
				<left>-1100</left>
				<top>530</top>
				<width></width>
				<height>550</height>
				<texture>tree_beach.png</texture>
				<aspectratio scalediffuse="false">keep</aspectratio>
		<visible>Skin.HasSetting(EnableCharacter) + Skin.HasSetting(HolidayThemes) + Skin.HasSetting(Beach) + Window.IsVisible(Home) + [!Window.IsActive(MovieInformation) + !Window.IsActive(MusicInformation) + !Window.IsActive(PVRGuideInfo) + !Window.IsActive(PVRRecordingInfo) + !Window.IsActive(PictureInfo) + !Window.IsActive(AddonInformation)]</visible>	
		<animation effect="fade" start="0" end="100" time="400">WindowOpen</animation>
		<animation effect="fade" start="100" end="0" time="300">WindowClose</animation>
		</control>
	</include>		
	<include name="Hat Beach">		
		<control type="image">	
			<top>5</top>
			<left>5</left>			
			<aspectratio>keep</aspectratio>
			<width>86</width>
			<height>86</height>
			<texture>hat_beach.png</texture>
			<visible>Skin.HasSetting(Beach)+ Skin.HasSetting(HolidayThemes) + Window.IsVisible(Home) + [!Window.IsActive(MovieInformation) + !Window.IsActive(MusicInformation) + !Window.IsActive(PVRGuideInfo) + !Window.IsActive(PVRRecordingInfo) + !Window.IsActive(PictureInfo) + !Window.IsActive(AddonInformation)]</visible>
		<animation effect="fade" start="0" end="100" time="400">WindowOpen</animation>
		<animation effect="fade" start="100" end="0" time="300">WindowClose</animation>
		</control>			
	</include>
	<include name="Character Beach">
		<control type="image">
				<left>0</left>
				<top>0</top>
				<width></width>
				<height>0</height>
				<texture></texture>
				<aspectratio scalediffuse="false">keep</aspectratio>
		</control>	
	</include>		
</includes>
