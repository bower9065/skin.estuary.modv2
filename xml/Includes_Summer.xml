<?xml version="1.0" encoding="utf-8"?>
<includes>
	<include name="Snow Summer">
		<control type="image">
				<left>0</left>
				<top>0</top>
				<width></width>
				<height>0</height>
				<texture></texture>
				<aspectratio scalediffuse="false">keep</aspectratio>
		</control>	
	</include>	
	<include name="Lights Summer">
		<control type="image">
				<left>0</left>
				<top>-160</top>
				<width></width>
				<height>300</height>
				<texture>lights_summer.png</texture>
				<aspectratio scalediffuse="false">keep</aspectratio>
		<visible>Skin.HasSetting(EnableStringLights) + Skin.HasSetting(HolidayThemes) + Skin.HasSetting(Summer) + [!Player.Playing | Window.IsVisible(DialogSeekBar.xml)]</visible>
		</control>
	</include>		
	<include name="Tree Summer">		
		<control type="image">
				<left>-1100</left>
				<top>630</top>
				<width></width>
				<height>450</height>
				<texture>tree_summer.png</texture>
				<aspectratio scalediffuse="false">keep</aspectratio>
		<visible>Skin.HasSetting(EnableCharacter) + Skin.HasSetting(HolidayThemes) + Skin.HasSetting(Summer) + Window.IsVisible(Home) + [!Window.IsActive(MovieInformation) + !Window.IsActive(MusicInformation) + !Window.IsActive(PVRGuideInfo) + !Window.IsActive(PVRRecordingInfo) + !Window.IsActive(PictureInfo) + !Window.IsActive(AddonInformation)]</visible>	
		<animation effect="fade" start="0" end="100" time="400">WindowOpen</animation>
		<animation effect="fade" start="100" end="0" time="300">WindowClose</animation>
		</control>
	</include>		
	<include name="Hat Summer">		
		<control type="image">	
			<top>5</top>
			<left>5</left>			
			<aspectratio>keep</aspectratio>
			<width>86</width>
			<height>86</height>
			<texture>hat_summer.png</texture>
			<visible>Skin.HasSetting(Summer)+ Skin.HasSetting(HolidayThemes) + Window.IsVisible(Home) + [!Window.IsActive(MovieInformation) + !Window.IsActive(MusicInformation) + !Window.IsActive(PVRGuideInfo) + !Window.IsActive(PVRRecordingInfo) + !Window.IsActive(PictureInfo) + !Window.IsActive(AddonInformation)]</visible>
		<animation effect="fade" start="0" end="100" time="400">WindowOpen</animation>
		<animation effect="fade" start="100" end="0" time="300">WindowClose</animation>	
		</control>			
	</include>
	<include name="Character Summer">
		<control type="image">
				<left>0</left>
				<top>0</top>
				<width></width>
				<height>0</height>
				<texture></texture>
				<aspectratio scalediffuse="false">keep</aspectratio>
		</control>	
	</include>		
</includes>
